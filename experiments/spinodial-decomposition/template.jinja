functor                          :  Lennard-Jones (12-6)
cutoff                           :  2.5
tuning-strategies                :  {{tuning_strategies}}
tuning-interval                  :  {{tuning_interval}}
tuning-samples                   :  {{tuning_samples}}
cell-size                        :  {{cell_size}}
iterations                       :  {{iterations}}
# these are the box size values for a equilibration with 160x160x160 and spacing 1.5
box-min                          :  [-0.75, -0.75, -0.75]
box-max                          :  [239.25, 239.25, 239.25]
deltaT                           :  0.00182367
boundary-type                    :  [periodic, periodic, periodic]
energy-sensor                    :  rapl
Sites:
  0:
    epsilon                      :  1.
    sigma                        :  1.
    mass                         :  1.
thermostat:
  initialTemperature             :  0.7
  targetTemperature              :  0.7
  deltaTemperature               :  2
  thermostatInterval             :  10
  addBrownianMotion              :  false
no-end-config                    :  true
no-progress-bar                  :  false
use-tuning-logger                :  true
no-progress-bar                  :  false
log-level                        :  info
{% if use_dynamic_tuning %}
tuning-trigger:
  trigger-type                   : {{trigger_type}}
  trigger-factor                 : {{trigger_factor}}
  trigger-n-samples              : {{trigger_n_samples}}
{% endif %}
{% if use_vtk %}
vtk-filename                     :  {{vtk_filename}}
vtk-output-folder                :  {{vtk_output_folder}}
vtk-write-frequency              :  {{vtk_write_frequency}}
{% endif %}